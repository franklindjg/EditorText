<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <BorderPane prefHeight="500.0" prefWidth="700.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <TextArea fx:id="texto" prefHeight="430.0" prefWidth="700.0" promptText="Write" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <VBox prefHeight="23.0" prefWidth="700.0" BorderPane.alignment="CENTER">
               <children>
                  <MenuBar prefHeight="32.0" prefWidth="710.0">
                     <menus>
                        <Menu mnemonicParsing="false" text="Fitxer">
                           <items>
                              <MenuItem mnemonicParsing="false" onAction="#onClick" text="Tancar" />
                           </items>
                        </Menu>
                        <Menu mnemonicParsing="false" onShowing="#showing" text="Editar">
                           <items>
                              <MenuItem fx:id="Copiar" mnemonicParsing="false" onAction="#onClick" text="Copiar" />
                              <MenuItem fx:id="Cortar" mnemonicParsing="false" onAction="#onClick" text="Tallar" />
                              <MenuItem fx:id="Enganxar" mnemonicParsing="false" onAction="#onClick" text="Enganxar" />
                              <MenuItem mnemonicParsing="false" onAction="#onClick" text="Desfer" />
                           </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Opcions">
                           <items>
                              <Menu mnemonicParsing="false" text="Font">
                                 <items>
                                    <CheckMenuItem fx:id="Calibri" mnemonicParsing="false" onAction="#onSelected" text="Calibri" />
                                    <CheckMenuItem fx:id="Courier" mnemonicParsing="false" onAction="#onSelected" text="Courier New" />
                                    <CheckMenuItem fx:id="Consolas" mnemonicParsing="false" onAction="#onSelected" text="Consolas" />
                                 </items>
                              </Menu>
                              <Menu mnemonicParsing="false" text="Tamany">
                                 <items>
                                    <CheckMenuItem fx:id="size12" mnemonicParsing="false" onAction="#onSelected" text="12px" />
                                    <CheckMenuItem fx:id="size14" mnemonicParsing="false" onAction="#onSelected" text="14px" />
                                    <CheckMenuItem fx:id="size24" mnemonicParsing="false" onAction="#onSelected" text="24px" />
                                 </items>
                              </Menu>
                           </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Ajuda">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#onClick" text="About" />
                          </items>
                        </Menu>
                     </menus>
                  </MenuBar>
                  <ToolBar prefHeight="40.0" prefWidth="200.0">
                    <items>
                        <Button fx:id="btnCopiar" mnemonicParsing="false" onAction="#onClick" text="Copiar" />
                        <Button fx:id="btnTallar" mnemonicParsing="false" onAction="#onClick" text="Tallar" />
                      <Button fx:id="tbnEnganxar" mnemonicParsing="false" onAction="#onClick" text="Enganxar" />
                    </items>
                  </ToolBar>
               </children>
            </VBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
